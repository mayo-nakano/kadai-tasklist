  <% if logged_in? %>
    <p>ログイン完了ユーザ: <%= current_user.name %> | <%= link_to 'Logout', logout_path, method: :delete %></p>
  <% else %>
    <p><%= link_to 'Signup' %> or <%= link_to 'Login', login_path %></p>
  <% end %>

  <h1>タスク一覧</h1>

  <% if logged_in? %>
    <%= render 'tasks/tasks', tasks: @tasks %>
  <% else %>
    <div>
      <h1>Let's organize your tasks!</h1>
      <%= link_to 'Sign up now!', signup_path %> or <%= link_to 'Login', login_path %>
    </div>
  <% end %>

  <%= link_to '新規タスクの追加', new_task_path %>